<div class="container col-sm-5 col-sm-offset-4" style="background-color:#CCCCCC;margin-top: 50px;">
    <center>
        <legend>
            <h2>ABOUT ME</h2>
        </legend>
    </center>
    <form name="myForm" class="form-horizontal">


        <div class="form-group">
            <label class="control-label col-sm-2">Email:<span class="glyphicon glyphicon-envelope"></span></label>
            <div class="col-sm-8">
                <input type="email" name="myInput" class="form-control charan" placeholder="Enter email"
                    ng-model="email" required>
                <span style="color: rgb(153, 70, 70); " ng-show="myForm.myInput.$touched && myForm.myInput.$invalid">
                    enter a
                    valid email
                </span>
            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-sm-2 ">Name<span class="glyphicon glyphicon-user"></span></label>
            <div class="col-sm-8">
                <input type="text" class="form-control charan" name="username" placeholder="Enter name"
                    ng-model="firstName" required>
            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-sm-2">Laname<span class="glyphicon glyphicon-user"></span></label>
            <div class="col-sm-8">
                <input type="text" class="form-control charan" name="lastname" placeholder="Enter lastname"
                    ng-model="lastName" required>
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Gender<span
                    class="glyphicon glyphicon-ruble"></span></label>
            <div class="col-sm-8">
                <select ng-model="Gender" class="form-control selectpicker charan">
                    <option value="">Select your Gender</option>
                    <option>MALE</option>
                    <option>FEMALE</option>
                </select>
            </div>
        </div>



        <div class="form-group">
            <label class="control-label col-sm-2">DATE:<span class="glyphicon glyphicon-calendar"></span>
            </label>
            <div class="col-sm-8">
                <input type="date" class="form-control charan" ng-model="date" required>
            </div>
        </div>





