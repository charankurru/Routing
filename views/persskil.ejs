        <div class="form-group">
            <label class="control-label col-sm-2">phNum:<span class="glyphicon glyphicon-phone-alt"></span></label>
            <div class="col-sm-8">
                <input type="number" class="form-control charan" placeholder="Enter phonenumber" ng-model="phonenumber">
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">City<span
                    class="glyphicon glyphicon-map-marker"></span></label>
            <div class="col-sm-8">
                <input type="number" class="form-control charan" placeholder="Enter Cityname" ng-model="cityname">
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">State</label>
            <div class="col-sm-8">
                <select ng-model="department" class="form-control selectpicker charan">
                    <option value="">Select your Department/Office</option>
                    <option>Department of Engineering</option>
                    <option>Department of Agriculture</option>
                    <option>Accounting Office</option>
                    <option>Tresurer's Office</option>
                    <option>MPDC</option>
                    <option>MCTC</option>
                    <option>MCR</option>
                    <option>Mayor's Office</option>
                    <option>Tourism Office</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
</div>